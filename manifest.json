{
  "manifest_version": 3,
  "name": "Ultra Memo Browser Extension",
  "version": "10.0",
  "description": "メモを保存・管理できるシンプルなブラウザ拡張機能です。",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage"
  ]
} 
